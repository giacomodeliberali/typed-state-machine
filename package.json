{
  "name": "typed-state-machine",
  "version": "1.0.0",
  "description": "A typed state machine inspired by jakesgordon/javascript-state-machine",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --verbose --watch",
    "test:cov": "jest --verbose --coverage",
    "test:coveralls": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "start": "nodemon",
    "build": "tsc",
    "clean": "npx rimraf dist && npx rimraf coverage"
  },
  "keywords": [
    "typescript",
    "ts",
    "state",
    "machine",
    "enum",
    "dfa",
    "nfa"
  ],
  "author": {
    "name": "Giacomo De Liberali",
    "url": "giacomodeliberali.com",
    "email": "deliberali.giacomo@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giacomodeliberali/typed-state-machine.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "coveralls": "^3.0.3",
    "jest": "^24.1.0",
    "nodemon": "^1.18.10",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.4.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}